            <script>
var GSFS = {};
GSFS.submit = function(form) {
    document.getElementById("gsfs-iframe").onload = GSFS.iframeLoaded;
    if (!GSFS.validateEmail(form["gsfs-email-input"].value)) {
        GSFS.msg("Invalid email.");
        return false;
    }
    return true;
};

GSFS.validateEmail = function(email) {
    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    return re.test(email);
};

GSFS.msg = function(text) {
    if (text == "") text = "&nbsp;";
    document.getElementById("gsfs-msg").innerHTML = text;
};

GSFS.iframeLoaded = function() {
    GSFS.msg("Thanks for subscribing =)");
    document.getElementById("gsfs-email-input").value = "";
};

GSFS.emailHint = "Your email...";

GSFS.blurEmail = function(input) {
    if (input.value == "") input.value = GSFS.emailHint;
};

GSFS.focusEmail = function(input) {
    if (input.value == GSFS.emailHint) input.value = "";
};

</script>
